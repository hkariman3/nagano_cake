<%= render'admin/adminheader' %>

<h4>注文履歴一覧</h4>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>

<% @top.each do |f| %>
  <tr>
    <td>
      <%= link_to admin_order_path(f.id) do %>
      <%= f.created_at.strftime('%Y/%m/%d %H:%M') %>
      <% end %>
      </td>
    <td><%= f.name %></td>
    <td><%= f.order_details.sum(:amount) %></td>
    <td><%= f.status_i18n %></td>
  </tr>
<% end %>
</table>

