<%= render'admin/adminheader' %>
<div class="container">
  <div class="row">
    <div class="col-2 offset-2">
<h4 class ="bg-secondary">商品編集</h4>
  </div>
</div>

<%= form_with model: @item, url:admin_item_path, method: :PATCH do |f| %>
<div class ="row">
  <div class = "col">
    <h4>商品画像</h4>
  </div>
  <div class = "col">
    <%= f.file_field :image, accept: "image/*" %>
  </div>
</div>

<div class ="row">
  <div class ="col">
    <h4>商品名</h4>
  </div>
  <div class ="col">
    <%= f.text_field :name %>
  </div>
</div>

<div class ="row">
  <div class = "col">
    <h4>商品説明</h4>
  </div>
  <div class = "col">
    <%= f.text_area :introduction %>
  </div>
</div>

<div class ="row">
  <div class = "col">
    <h4>ジャンル</h4>
  </div>
  <div class = "col">
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  </div>
</div>

<div class ="row">
  <div class = "col">
    <h4>税抜価格</h4>
  </div>
  <div class = "col">
    <%= f.text_field :price %>円
  </div>
</div>

<div class ="row">
  <div class = "col">
    <h4>販売ステータス</h4>
  </div>
  <div class ="col">
    <div>
        <div>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>
        </div>
        <div>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>
    </div>
  </div>
  </div>
</div>
<div class = "row">
  <div class = "col-2 offset-5">
<%= f.submit'変更を保存', class:"btn-success" %>
  </div>
</div>


      </div>
    </div>


<% end %>