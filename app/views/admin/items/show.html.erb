 <%= render'admin/adminheader' %>
<div class = "container">

<div class = "row my-3">
  <div class = "col-md2 offset-2">
   <h4 class = "bg-secondary">商品詳細</h4>
  </div>
</div>

 <div class = "row">
   <div class = "col-md-4">
     <%= image_tag @item.get_image,size:"300x200" %>
   </div>

   <div class = "col-md-2">
         <p>商品名</p>
         <p>商品説明</p>
         <p>ジャンル</p>
         <p>税込価格<br>（税抜価格）</p>
         <p>販売ステータス</p>
   </div>

   <div class = "col">
         <p><%= @item.name %></p>
         <p><%= @item.introduction %></p>
         <p><%= @item.genre.name %></p>
         <p><%= @item.price %>(<%= @item.add_tax_price.to_s(:delimited) %> )円</p>
         <p><% if @item.is_active == true %>
             <p class="text-success"></br>販売中</p>
            <% else %>
             <p class="text-muted"></br>販売停止中</p>
            <% end %>
         </p>
   </div>

 </div>

 <div class = "row my-3">
   <div class = "col-md-2 offset-5">
     <%= link_to"編集する", edit_admin_item_path, class:'btn btn-success form-control' %>
   </div>
 </div>


</div>