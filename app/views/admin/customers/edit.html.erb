<%= render'admin/adminheader' %>
<div class = "container">


<p><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</p>

<%= form_with model: @customer, url:admin_customer_path, method: :PATCH do |f| %>
<div class = "row my-3">
  <div class = "col-md-1 d-flex align-items-center">会員ID</div>
  <div class = "col-md-1 offset-2"><%= @customer.id %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-1 d-flex align-items-center">氏名</div>
  <div class = "col-md-3 offset-2"><%= f.text_field :first_name, class:'form-control'  %></div>
  <div class = "col-md-3"><%= f.text_field :last_name, class:'form-control' %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-1 d-flex align-items-center">フリガナ</div>
  <div class = "col-md-3 offset-2"><%= f.text_field :first_name_kana, class:'form-control' %></div>
  <div class = "col"><%= f.text_field :last_name_kana, class:'form-control' %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-1 d-flex align-items-center">郵便番号</div>
  <div class = "col-md-3 offset-2"><%= f.text_field :postal_code, class:'form-control' %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-1 d-flex align-items-center">住所</div>
  <div class = "col-md-6 offset-2"><%= f.text_field :address, class:'form-control' %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-1 d-flex align-items-center">電話番号</div>
  <div class = "col-md-3 offset-2"><%= f.text_field :telephone_number, class:'form-control' %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-2 d-flex align-items-center">メールアドレス</div>
  <div class = "col-md-3 offset-1"><%= f.text_field :email, class:'form-control' %></div>
</div>

<div class = "row my-3">
  <div class = "col-md-2 d-flex align-items-center">会員ステータス</div>

        <div class = "col-md-1 offset-1">
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, '有効', value: true %>
        </div>
        <div class = "col-md-1">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, '退会', value: false %>
        </div>

</div>
<div class = "row">
  <div class = "col-md-2 offset-3">
    <%= f.submit'変更を保存', class:"btn btn-success" %>
  </div>
</div>
<% end %>






</div>