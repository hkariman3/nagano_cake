<div class = "container">

 <%= render'admin/adminheader' %>

<h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h4>
   <div class = "row my-3">
    <div class = "col-md-2">会員ID</div>
    <div class = "col offset-1"><%= @customer.id %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">氏名</div>
    <div class = "col offset-1"><%= @customer.first_name %><%= @customer.last_name %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">フリガナ</div>
    <div class = "col offset-1"><%= @customer.first_name_kana %><%= @customer.last_name_kana %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">郵便番号</div>
    <div class = "col offset-1"><%= @customer.address %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">住所</div>
    <div class = "col offset-1"><%= @customer.postal_code %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">電話番号</div>
    <div class = "col offset-1"><%= @customer.telephone_number %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">メールアドレス</div>
    <div class = "col offset-1"><%= @customer.email %></div>
   </div>

   <div class = "row my-3">
    <div class = "col-md-2">会員ステータス</div>
    <div class = "col offset-1"><% if @customer.is_deleted == true %>
             <h5 class="text-muted">退会</h5>
            <% else %>
             <h5 class="text-success">有効</h5>
            <% end %></div>
   </div>

   <div class = "row">
    <div class = "col-md-1 offset-3 btn btn-success"><%= link_to"編集する",edit_admin_customer_path(@customer.id),class:'text-white' %></div>
    <div class = "col-md-2 offset-1 btn btn-primary"><%= link_to"注文履歴一覧を見る",admin_path, class:'text-white' %></div>
   </div>


</div>

