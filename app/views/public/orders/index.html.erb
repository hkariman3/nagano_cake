<%= render"public/publicheader" %>

<div class = "container">
  <div class = "row">
    <div class = "col">
      <h4>注文履歴一覧</h4>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
      <table class = "table table-bordered">
        <thead>
          <tr>
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <td>ステータス</td>
            <td>注文詳細</td>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td>〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %></td>
            <td>
            <% order.order_details.each do |order_details| %>
            <%= order_details.item.name %><br>
            <% end %>
              </td>
            <td><%= order.total_payment %></td>
            <td><%= order.status_i18n %></td>
            <td>
            <%= link_to order_path(order.id) do %>
              <button class = "primary">表示する</button>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>