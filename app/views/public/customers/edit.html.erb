<%= render "public/publicheader" %>
<div class = "container">
  <div class = "row">
    <h4 class = "bg-secondary">会員情報編集</h4>
  </div>

    <%= form_with model: @customer, url:customer_path, method: :PATCH do |f| %>
  <div class = "row">
    <div class = "col">
    氏名
    </div>
    <div class = "col">
      <%= f.text_field :last_name %>
    </div>
    <div class = "col">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
    フリガナ
    </div>
    <div class = "col">
    <%= f.text_field :last_name_kana %>
    </div>
    <div class = "col">
    <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
    郵便番号
    </div>
    <div class = "col">
    <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
    住所
    </div>
    <div class = "col">
    <%= f.text_field :address %>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
    電話番号
    </div>
    <div class = "col">
    <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
    メールアドレス
    </div>
    <div class = "col">
    <%= f.text_field :email %>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
    <%= f.submit'編集内容を保存', class:"btn btn-success" %>
    </div>

    <%= link_to customers_unsubscribe_path do %>

    <button type="button" class="btn btn-danger">退会する</button>

    <% end %>
    <% end %>
  </div>
</div>