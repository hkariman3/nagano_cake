<%= render "public/publicheader" %>

<div class = "container">
  <div class = "row">
    <h4>マイページ</h4>
  </div>

  <div class = "row">
    <div class = "col">
      登録情報
    </div>
    <%= link_to edit_customer_path do %>
    <button type="button" class="col btn btn-success">編集する</button>
    <% end %>
  </div>

  <div class = "row">
    <div class = "col">

      <table class="table table-bordered">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
    </div>

    <div class = "row">
      <div class = "col">配送先</div>
      <div class = "col"><%= link_to "一覧を見る", address_index_path, class:"btn btn-primary" %></div>
    </div>

    <div class = "row">
      <div class = "col">注文履歴</div>
      <div class = "col"><%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %></div>
    </div>

</div>