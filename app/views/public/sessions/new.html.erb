<%= render "public/publicheader" %>
<div class = "container">
  <div class = "row my-3">
    <div class = "col-md2 bg-secondary">
      <h4>ログイン</h4>
    </div>
  </div>

  <div class = "row">
    <div class = "col">
      <h5>会員の方はこちらからログイン</h5>
    </div>
  </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class = "row my-3">
    <div class = "col">
        <%= f.label :email, "メールアドレス" %>
    </div>

    <div class = "col">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:'form-control' %>
    </div>
  </div>

  <div class = "row my-3">
    <div class = "col">
      <%= f.label :password, "パスワード" %>
    </div>

    <div class = "col">
      <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
    </div>
  </div>



  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
<div class = "row my-3">

<%= render "public/shared/links" %><p>&nbsp;から新規登録を行ってください</p>
</div>

</div>
